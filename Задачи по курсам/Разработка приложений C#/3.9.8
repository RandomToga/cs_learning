/* 3.9.8
Напишите программу, которая считывает два целочисленных одномерных массива, а затем рассчитывает две суммы по следующей логике:

Sum1: это сумма элементов с чётным индексом (0, 2, 4) из первого массива и нечётных (1, 3, 5) из второго массива.
Sum2: это сумма элементов с нечётным индексом (1, 3, 5) из первого массива и чётных (0, 2, 4) из второго массива.
Решить задачу в пользовательской функции SumArrays.*/

using System;

public class MainClass
{
    static void Boss(ref int[] array1, ref int[] array2, in int n, ref int su1, ref int su2){
        string[] arrtemp = Console.ReadLine().Split(' ');
        for (int i=0; i<n; i++) {
            array1[i] = Convert.ToInt32(arrtemp[i]);
            if (i%2==0) su1 += array1[i];
            else su2 += array1[i];
        }
        arrtemp = Console.ReadLine().Split(' ');
        for (int i=0; i<n; i++) {
            array2[i] = Convert.ToInt32(arrtemp[i]);
            if (i%2==0) su2 += array2[i];
            else su1 += array2[i];
        }
    }
    public static void Main()
    {
        int n = Convert.ToInt32(Console.ReadLine());
        int su1 = 0;
        int su2 = 0;
        int[] array1 = new int[n];
        int[] array2 = new int[n];
        Boss(ref array1,ref  array2, n, ref su1, ref su2);
        Console.WriteLine("Sum1 = {0}, Sum2 = {1}", su1, su2);
    }
}

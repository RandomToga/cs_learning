/* 3.9.4
Напишите программу, которая рассчитывает среднее арифметическое трех чисел.*/

using System;

class Program
{
    static double Average3(double a1, double a2, double a3){
        return (a1+a2+a3)/3;
    }
    static void Main()
    {
        double a1 = Convert.ToDouble(Console.ReadLine());
        double a2 = Convert.ToDouble(Console.ReadLine());
        double a3 = Convert.ToDouble(Console.ReadLine());
        Console.WriteLine("Среднее арифметическое трёх чисел = "+Math.Round(Average3(a1, a2, a3), 2));
    }
    
}

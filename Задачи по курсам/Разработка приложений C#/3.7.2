/* 3.7.2
Напишите программу, которая найдёт максимальный чётный элемент в целочисленном списке List.*/

using System;
using System.Collections.Generic;

public class MainClass
{
    public static void Main()
    {
        int n = Convert.ToInt32(Console.ReadLine());
        List<int> numbers = new List<int>();
        int max = 0;
        bool flag = true;
        for (int i = 0; i < n; i++){
            numbers.Add(Convert.ToInt32(Console.ReadLine()));
            if (numbers[i]%2==0 && numbers[i]>max){
                max = numbers[i];
                flag = false;
            }
        }
        if (flag) Console.WriteLine("Чётных элементов в списке нет!");
        else Console.WriteLine("Максимальный чётный в списке = "+max);
    }
}

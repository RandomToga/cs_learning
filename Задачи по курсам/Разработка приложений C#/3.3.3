/* 3.3.3
Напишите программу, которая вычисляет сумму двух чисел, если они оба нечётные. Если хотя бы одно из чисел чётное, то надо вывести их разность.*/

using System;

public class MainClass
{
    public static void Main()
    {
        int a = Convert.ToInt32(Console.ReadLine());
        int b = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine((a%2!=0 && b%2!=0)? "Сумма чисел = "+(a+b):"Разность чисел = "+(a-b));
    }
}
